<% if book.favorited_by?(current_user) %>
  <p>
    <%= link_to book_favorites_path(book), method: :delete, rocal: false do %>
    ♡<%= book.favorites.count %> いいね
    <% end %>
  </p>
  <% else %>
  <p>
    <%= link_to book_favorites_path(book), method: :post, rocal: false do %>
    ♡<%= book.favorites.count %> いいね
    <% end %>
  </p>
<% end %>